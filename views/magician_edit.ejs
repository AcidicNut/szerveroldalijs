<%- include('header') -%>
<%- include('menu') -%>
<div class="row justify-content-center">
    <form class="col-6">
        <caption>
            <h2><strong>Add/Modify Magician</strong></h2>
        </caption>
        <div class="form-group">
            <label for="nameInput">Name</label>
            <input type="text" required class="form-control" id="nameInput">
        </div>
        <div class="form-group">
            <label for="colourInput">Favourite Colour</label>
            <input type="text" class="form-control" id="colourInput">
        </div>
        <button id="magicianAddBtn" type="submit" class="btn btn-primary">Submit</button>
        <a class="btn btn-danger" href="/magicians">Cancel</a>
    </form>
</div>
