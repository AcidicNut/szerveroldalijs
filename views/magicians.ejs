<%- include('header') -%>
<%- include('menu') -%>
<table class="table  col-8 offset-2">
    <caption style="caption-side: top; width: auto; background-color: lightgray; text-align: center">
        <h2><strong>Magicians</strong></h2>
    </caption>
    <thead class="thead-dark">
    <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Favourite Colour</th>
        <th scope="col"></th>
    </tr>
    </thead>
    <tbody>
    <% for (key in magicians) { var magician = magicians[key];%>
    <tr>
        <th scope="row"><%= parseInt(key) + 1 %></th>
        <td><%= magician.name %></td>
        <td><%= magician.favouriteColour %></td>
        <th scope="col">
            <a class="btn btn-light" href="/magicians/magician/<%=magician._id%>"><i class="fas fa-edit"></i></a>
            <a class="btn btn-danger" href="/magicians/del/<%=magician._id%>"><i class="fas fa-trash-alt"></i></a>
        </th>
    </tr>
    <% } %>
    </tbody>
</table>
<%- include('footer') -%>